<!DOCTYPE html>
<html lang="<%= locale%>">
<head>
    <% include partials/head.ejs %>
</head>
<body>
<% include partials/header.ejs%>
<div class="wrap">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card m-b-30">
                    <div class="card-header">
                        <div class="float-left">
                            <a href="#"><h4><%= __("UsersAccount")%></h4></a>
                        </div>
                        <div class="float-right">
                            <a class="btn btn-success" href="/adduser"><%= __("UserAdd")%></a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col"><%= __("Username")%></th>
                                    <th scope="col">Email</th>
                                    <th scope="col"><%= __("Status")%></th>
                                    <th scope="col"><%= __("Level")%></th>
                                    <th scope="col"><%= __("Actions")%></th>
                                </tr>
                                </thead>
                                <tbody>
                                <% for(var i=0; i<users.length; i++) {%>
                                    <tr>
                                        <td class=" text-muted"><%= users[i]._id%></td>
                                        <td>
                                            <div class="widget-content p-0">
                                                <div class="widget-content-wrapper">
                                                    <div class="widget-content-left flex2">
                                                        <div class="widget-heading"><%= users[i].username%></div>
                                                        <div class="widget-subheading opacity-7"><%= users[i].name%></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <%= users[i].email%>
                                        </td>
                                        <td>
                                            <div class="badge badge-<%if(users[i].rank === false){%>danger<%}else{%>success<%}%>"><%if (users[i].enable){%><%= __("Enable")%><%}else{%><%= __("Disable")%><%}%></div>
                                        </td>
                                        <td>
                                            <div class="badge badge-<%if(users[i].rank === "Admin"){%>danger<%}else{%>success<%}%>"><%= users[i].rank%></div>
                                        </td>
                                        <td>
                                            <a href="<% if(user.id == users[i]._id){ %>/profile<%}else{%>/edit/<%=users[i]._id%><%}%>" class="btn btn-primary btn-sm"><%= __("Details")%></a>
                                        </td>
                                    </tr>
                                <% }%>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% include partials/footer.ejs%>
</body>
<%include partials/link.ejs%>
</html>